<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="offset-4">
        <h3 class="text-info">プロフィール編集</h3>
      </div>
      <div class="mt-4">
        <%= form_with model: @user do |f| %>
          <div class="field offset-4 mb-4">
            <%= f.label :profile_image, "プロフィール画像" %><br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="field offset-4 mb-4">
            <%= f.label :school_year, "学年" %><br>
            <%= f.select :school_year, [["中学1年",1], ["中学2年",2], ["中学3年",3], ["高校1年",4], ["高校2年",5], ["高校3年",6], ["大学生以上",7]] %>
          </div>
          <div class="field offset-4 mb-5">
            <%= f.label :name, "ユーザーネーム" %><br>
            <%= f.text_field :name %>
          </div>
          <div class="field offset-4">
            <%= f.submit "変更を保存", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
