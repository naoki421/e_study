<h2>科目</h2>

<h3>科目新規登録</h3>
<div>
  <%= form_with model: @subject, url: subjects_path, method: :post do |f| %>
    <div>
      <%= f.label :name, "科目名" %>
      <%= f.text_field :name, placeholder: "(例)英語、簿記、漢字検定", autocomplete: "off" %>
      
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>

<h3>科目一覧</h3>
<div>
  <table>
    <thead>
      <tr>
        <th>科目名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td><%= link_to "編集", edit_subject_path(subject) %></td>
          <td><%= link_to "削除", subject_path(subject), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
